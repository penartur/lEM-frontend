extends layout

append scripts
	script(language='Javascript', src='/javascripts/unrestricted-lcm.js')

append body

	.page-header: h1 Unrestricted latent class model

	form.rawResponse.well#unrestrictedLcmForm(method='post', action = '')
		#latentFieldset
			p: input.required(type='text', name='latentNumber', placeholder='Number of latent variables', data-validators='validate-integer')
		#manifestFieldset
			p: input.required(type='text', name='manifestNumber', placeholder='Number of manifest variables', data-validators='validate-integer')
		p: textarea.input-xlarge.required(name='data', placeholder='data', rows=4)
		p: button.btn(type='submit') Submit

	div#resultContainer(style='display:none')
		h3 Result
		pre#resultPlaceholder
